{
  "name": "ItsSmartToolBot",
  "description": "A Smart Telegram Bot With Multi Functional Tools.",
  "repository": "https://github.com/abirxdhack/SmartDlBot",
  "logo": "https://telegra.ph/file/bba2857e986adfc7b7642.jpg",
  "keywords": ["telegram", "bot", "python", "telethon", "pyrogram", "tools"],
  "env": {
    "API_ID": {
      "description": "Telegram API ID from my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API HASH from my.telegram.org",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Token from @BotFather",
      "required": true
    },
    "SESSION_STRING": {
      "description": "Generate from @ItsSmartToolBot via /pyro",
      "required": false
    },
    "ADMIN_IDS": {
      "description": "Comma-separated list of Telegram Admin User IDs",
      "required": true
    },
    "OWNERS": {
      "description": "Comma-separated list of Owner User IDs",
      "required": true
    },
    "DEFAULT_LIMIT": {
      "description": "Default limit per user",
      "value": "5000"
    },
    "ADMIN_LIMIT": {
      "description": "Limit for admins",
      "value": "10000"
    },
    "MONGO_URL": {
      "description": "MongoDB connection string",
      "required": true
    },
    "DATABASE_URL": {
      "description": "MongoDB connection string for settings",
      "required": true
    },
    "DB_URL": {
      "description": "Backup/Secondary MongoDB URL",
      "required": false
    },
    "GOOGLE_API_KEY": {
      "description": "Google API Key",
      "required": false
    },
    "GROQ_API_KEY": {
      "description": "GROQ API Key",
      "required": false
    },
    "GPT_API_KEY": {
      "description": "OpenAI API Key",
      "required": false
    },
    "SPOTIFY_CLIENT_ID": {
      "description": "Spotify Client ID",
      "required": false
    },
    "SPOTIFY_CLIENT_SECRET": {
      "description": "Spotify Client Secret",
      "required": false
    },
    "LOCATIONIQ_API_KEY": {
      "description": "LocationIQ Key",
      "required": false
    },
    "IPINFO_API_TOKEN": {
      "description": "IPInfo API Token",
      "required": false
    },
    "NEWS_API_KEY": {
      "description": "News API Key",
      "required": false
    },
    "BIN_KEY": {
      "description": "HandyAPI BIN Key",
      "required": false
    },
    "DOMAIN_API_KEY": {
      "description": "Domain Whois API Key",
      "required": false
    },
    "MAX_DOMAINS": {
      "description": "Max number of domains for WHOIS",
      "value": "20"
    },
    "OCR_WORKER_URL": {
      "description": "URL of the OCR Worker",
      "required": false
    },
    "TEXT_API_URL": {
      "description": "Gemini Text API Endpoint",
      "required": false
    },
    "IMAGE_API_URL": {
      "description": "Image generation API URL",
      "required": false
    },
    "YT_COOKIES_PATH": {
      "description": "YT-DLP Cookie Path",
      "value": "./cookies/ItsSmartToolBot.txt"
    },
    "COMMAND_PREFIX": {
      "description": "Allowed prefixes, separated by | (pipe)",
      "value": "!|.|#|,|/"
    },
    "UPDATE_CHANNEL_URL": {
      "description": "URL to the bot updates channel",
      "value": "https://t.me/TheSmartDev"
    },
    "PROFILE_ERROR_URL": {
      "description": "Fallback photo for /info command",
      "value": "https://t.me/BotsDevZone/243"
    },
    "TEXT_MODEL": {
      "description": "Model name for AI (e.g., deepseek-r1)",
      "value": "deepseek-r1-distill-qwen-32b"
    },
    "GROQ_API_URL": {
      "description": "GROQ API endpoint",
      "value": "https://api.groq.com/openai/v1/chat/completions"
    },
    "DEVELOPER_USER_ID": {
      "description": "Bot developer's Telegram user ID",
      "required": true
    },
    "MAX_IMAGE_SIZE": {
      "description": "Max image size for OCR/Gemini (in bytes)",
      "value": "5242880"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
